<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ankurshaswat.iitdapp">

    <application
        android:allowBackup="true"
        android:name=".MyFirebaseApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".NewsMenuActivity"
            android:label="IITDApp"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BlogDetailActivity"
            android:label="@string/title_activity_blog_detail"
            android:theme="@style/MyMaterialTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/MyMaterialTheme"></activity>
    </application>

</manifest>